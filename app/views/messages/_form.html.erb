  <div class="panel panel-default">
    <div class="panel-heading">
      メッセージ入力
    </div>
    <div class="panel-body">
        <%= form_for(@message) do |f| %>
          <% if @message.errors.present? %>
            <div class="alert alert-danger">
              <%= alert %>
              <ul>
                <% @message.errors.full_messages.each do |full_message| %>
                  <li>
                    <%= full_message %>
                  </li>
                <% end %> 
              </ul>
            </div>
          <% end %>
          <div class="form-horizontal">
              <div class="form-group">
                <div class="col-sm-3">
                  <%= f.text_field :name,class: "form-control", placeholder: "名前" %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-9">
                  <%= f.text_area :body,class: "form-control",rows: 5, placeholder: "内容" %>
                </div>
              </div>
              <%= f.submit class: "btn btn-sm btn-primary col-sm-2" %>
          </div>
        <% end %>
    </div>
  </div>

<div class="container" style="padding:0">
    <div class="panel panel-default">
        <div class="panel-heading">
          メッセージ一覧
        </div>
        <div class="row" style="padding:20px 50px;">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr><th>name</th><th>message</th><th>edit</th></tr>
                </thead>
                <tbody>
                    <% @messages.each do |message| %>
                        <tr><td class="col-md-3"><%= message.name %></td><td class="col-md-8"><%= simple_format(h(message.body)) %></td><td class="col-md-2"><%= link_to "edit" , edit_message_path(message) %><br /> <%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %></td></tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ入力
  </div>
  <%= render 'form' %>
</div>

